<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="FinskyTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@color/tran</item>
        <item name="android:ratingBarStyleSmall">@style/FinskyRatingBarSmall</item>
    </style>
    <style name="FinskyRatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:maxHeight">@dimen/rating_bar_small_height</item>
        <item name="android:minHeight">@dimen/rating_bar_small_height</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>
</resources>
